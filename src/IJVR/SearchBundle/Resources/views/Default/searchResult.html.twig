{% extends "::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block body %}
<br/>
<br/>


<div class="container-fluid">
	<div class="row" id="AppendToElem">
		<div class="col-md-12">
			<h2>
				Search Results
			</h2>
			<p>
				<span>There are</span> <strong>{{pagination|length}}</strong> <span>results for:</span> <strong>{{title}}</strong>
			</p>
			<p>
				<a class="btn" href="#"></a>
			</p>
			<div class="row" id="AppendToRow" >
				<div class="col-md-3">
					<h3>
						Filter List
					</h3>
					       
					     <div>
         						
            					<a data-toggle = "collapdatase" -parent = "#AppendToRow" href = "#checkboxDate">
              					 Year
            					</a>
         					
      					</div>   
						<div  id="checkboxDate" class = "panel-collapse collapse in">
							 
							
							</label>
							{% for date in dates %}
							<input class="date" type="checkbox" value="{{date}}" /> {{date}}<br>
							{% endfor %}
						</div>
						<br>
						<div>
         						
            					<a data-toggle = "collapse" data-parent = "#AppendToRow" href = "#checkboxIssue">
              					 Issue name
            					</a>
         					
      					</div>   

						<div class="panel-collapse collapse in" id="checkboxIssue">
						
							</label>
							{% for issue in issues %}
							<input class="issueTitle" type="checkbox" value="{{issue}}" /> {{issue}}<br>
							{% endfor %}
						</div>


						<br>
						<div>
         						
            					<a data-toggle = "collapse" data-parent = "#AppendToRow" href = "#checkboxKeywords">
              					 Keywords
            					</a>
         					
      					</div> 
						<div class="form-group" id="checkboxKeywords">
							 
							</label>
							{% for keyword in keywords %}
							<input class="keywords" type="checkbox" value="{{keyword}}" /> {{keyword}}<br>
							{% endfor %}
						</div>

						<br>
						<div>
         						
            					<a data-toggle = "collapse" data-parent = "#AppendToRow" href = "#checkboxauthors">
              					 Authors
            					</a>
         					
      					</div> 
						<div class="form-group" id="checkboxauthors">
							 
							</label>
								{% for author in authors %}
							<input class="authors" type="checkbox" value="{{author}}"/> {{author}}<br>
								{% endfor %}
						</div>
						
					
				</div>
				<div class="col-md-6">
					<div class="row">
						{% for article in pagination %} 
						<p> </p>
		
						{% if article.status == 6 %}
   

						<div class="col-md-12">
						
							 <a href="{{path('ijvr_search_single_article',{'id':article.id})}}"><h3>{{ article.title }}</h3></a>
							<dl>
								<dt>
									<h3>
										{{article.issue.title}}
									</h3>
									<p>
										Volume {{article.issue.volume.year}} , Pages: {{article.pages}}
									</p>
									<p>
										Article first published online : {{article.date |date("m/d/Y")}} 
										 {% if is_granted("ROLE_USER_PLUS") %}
										<a href="{{asset(article.pdf.webpath)}}" target="__blank"><img src="{{asset('/images/pdf.png')}}" height="30px">											
										</img> 

										 Download PDF</a>
									 {%endif%}
									</p>
								</dt>
							</dl>
						</div>
						{% endif %}
						{% endfor %}
					</div>
					<div class="navigation pagination" >
    {{ knp_pagination_render(pagination) }}
</div>
				</div>
			</div>
		</div>
	</div>
</div>


 <script>

 $(function () { $('#checkboxIssue').collapse('hide')});
 $(function () { $('#checkboxKeywords').collapse('toggle')});
  $(function () { $('#checkboxKeywords').collapse('hide')});
 $(function () { $('#checkboxauthors').collapse('hide')});

var datao = {  title : "{{title}}"  ,  date:"{{date}}" , issueTitle :"{{issueTitle}}", keywords :[] , authors:[],pageNumber:1} ;

{% if  _authors is not  empty %}
	datao["authors"]=($.parseJSON('{{ _authors| raw }}'));
{% endif %}

{% if  _keywords is not  empty %}
	datao["keywords"]=($.parseJSON('{{ _keywords| raw }}'));
{% endif %}


$(document).on("click",".date, .issueTitle, .keywords, .authors, .page",function(event){

$(this).attr('class')
$(".col-md-12").remove();
 if($(this).attr('class')==="date")
	datao["date"]=$(this).val()
if($(this).attr('class')==="issueTitle")
	datao["issueTitle"]=$(this).val()
if($(this).attr('class')==="keywords")
	datao["keywords"].push($(this).val())
if($(this).attr('class')==="authors")
	datao["authors"].push($(this).val())
if($(this).attr('class')=="page")
	datao.pageNumber=parseInt($(this).text());
else
	datao.pageNumber=1;

console.log(datao)

{%set base=asset('')%}
 $.ajax({
         url: "criteria_search",          
         type: 'POST', //I want a type as POST
         data: datao,
         success: function(data){ 
         data=$.parseJSON(data)
		 articles=data.articles
		 pagesNumber=data.pagesNumber
		 console.log(articles)
		 console.log(pagesNumber)

