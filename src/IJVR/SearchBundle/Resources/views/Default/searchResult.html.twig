	 	  $.each(uniqueDates, function(index,jsonObject){
	   
        $("#checkboxDate").append("<input class=\"date\" type=\"checkbox\" value="+jsonObject+" /> "+jsonObject+ "<br>") 
         });

	 
 $("#AppendToCol3").append("<\/div> <div><a data-toggle = \"collapse\" data-parent = \"#AppendToRow\"href= \"#checkboxIssue\">Issue name <\/a><\/div>  <div class=\"form-group\" id=\"checkboxIssue\"> ");
	 
	  $.each(uniqueIssueTitles, function(index,jsonObject){
	  	console.log("loopisue",jsonObject)
	   
        $("#checkboxIssue").append("<input  class=\"issueTitle\" type=\"checkbox\" value="+jsonObject+" /> "+jsonObject+ "<br>") 
         });
		 $("#AppendToCol3").append("<\/div>  <div><a data-toggle = \"collapse\" data-parent = \"#AppendToRow\"href= \"#checkboxkeywords\">Keywords <\/a><\/div>  <div class=\"form-group\" id=\"checkboxkeywords\">");
		  $.each(articles, function(index,article){
		  		$.each(article.keywords, function(index,keyword){
		  $("#checkboxkeywords").append("<input class=\"keywords\" type=\"checkbox\" value="+keyword.keyword+" /> "+keyword.keyword+ "<br>") 
		  			});
         });


		   $("#AppendToCol3").append("<\/div> <div><a data-toggle = \"collapse\" data-parent = \"#AppendToRow\"href= \"#checkboxauthors\">Authors <\/a><\/div>  <div class=\"form-group\" id=\"checkboxauthors\"> ");
		  $.each(articles, function(index,article){
		  		$.each(article.authors, function(index,author){
		  $("#checkboxauthors").append("<input class=\"authors\" type=\"checkbox\" value="+author.name+" /> "+author.name+ "<br>") 
		  			});
         });




		 $("#AppendToRow").append("<\/div> <\/div> <div class=\"col-md-6\" id=\"AppendToCol6\" > <div class=\"row\">")
		  $.each(articles, function(index,jsonObject){
	   		a="{{is_granted('ROLE_USER_PLUS') }}";
		  	if(jsonObject.status == 6)
		  		{

		  	if(	a){

        		$("#AppendToCol6").append("<p> <\/p> \r\n\r\n <div class=\"col-md-12\"  id=\"AppendToCol12\"> <a href=\"singleArticle/"+jsonObject.id+"\"><h3>"+jsonObject.title+"<\/h3><\/a> <dl> <dt> <h3>" +jsonObject.issue.title+" <\/h3> <p> Volume " +jsonObject.issue.volume.year+", Pages: "+ jsonObject.pages+"  <\/p> <p> Article first published online : "+jsonObject.date.date.substring(0,4)+"<a href= {{base}}uploads/"+jsonObject.pdf.url+"/"+jsonObject.pdf.id+".pdf target=__blank> <img src={{base}}images/pdf.png height=30px></img>&nbsp; Download PDF<\/a> <\/p> <\/dt> <\/dl> <\/div>") ;

    		}

    		else{

    			$("#AppendToCol6").append("<p> <\/p> \r\n\r\n <div class=\"col-md-12\"  id=\"AppendToCol12\"> <a href=\"singleArticle/"+jsonObject.id+"\"><h3>"+jsonObject.title+"<\/h3><\/a> <dl> <dt> <h3>" +jsonObject.issue.title+" <\/h3> <p> Volume " +jsonObject.issue.volume.year+", Pages: "+ jsonObject.pages+"  <\/p> <p> Article first published online : "+jsonObject.date.date.substring(0,4)+" <\/p> <\/dt> <\/dl> <\/div>") ;
    		}
    	}
         });
		 
		  $("#AppendToCol6").append(" <\/div > <ul  class=\"pagination\"> ");
console.log(pagesNumber)
		  for (i=0;i<pagesNumber/10;i++){
		  	console.log(i)
		   $(".pagination").append( " <li class=\"page\"> <a href=\"#\"  >"+(i+1)+"<\/a> <\/li> ")

			}
		 
	$("#AppendToCol6").append(" <\/ul> <\/div> <\/div> <\/div>");
       
            $(".row").append("");
         },
       
      });

}
);



  </script>

{% endblock %}
